# NextAuth 配置
NEXTAUTH_SECRET="your_secure_random_string_here"
NEXTAUTH_URL="http://localhost:3000"

# 邮件服务配置 (必需，用于发送注册验证码)
# 请配置你自己的SMTP服务信息
EMAIL_SERVER_HOST=smtp.qq.com
EMAIL_SERVER_PORT=465
EMAIL_SERVER_USER=your_email@qq.com
EMAIL_SERVER_PASSWORD=your_smtp_password
EMAIL_FROM=your_email@qq.com

# 数据库相关环境变量 (Docker Compose 会自动配置，无需修改)
DATABASE_URL="postgresql://noteol:noteol_password@db:5432/noteol_db"
POSTGRES_URL="postgresql://noteol:noteol_password@db:5432/noteol_db"
PRISMA_DATABASE_URL="postgresql://noteol:noteol_password@db:5432/noteol_db"